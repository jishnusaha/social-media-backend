{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["runserver", "9001"],
            "django": true,
            "justMyCode": true,
            "env": {
              "POETRY_ACTIVE": "1",
              "DJANGO_DEBUG": "true"
            },
            "preLaunchTask": "docker-compose-up"
           
        }
    ]
}
